<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/backgroundcolor"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/back_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDEA39"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:text="Good Luck"
            android:paddingRight="25dp"
            android:textColor="#646363"
            android:textAllCaps="false"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#fff"
            android:shadowRadius="1"
            android:textSize="20sp"
            android:onClick="back_button_function"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" The Result"
            android:textColor="#646363"
            android:textSize="40sp"
            android:textStyle="bold"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#fff"
            android:shadowRadius="1"
            />
        <TextView
            android:id="@+id/textview_score_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Score is: 5"
            android:textColor="#646363"
            android:textSize="30sp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            />
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="10dp"
            android:layout_margin="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_result"
                            android:layout_centerInParent="true"
                            />
                        <TextView
                            android:id="@+id/textview_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All Questions with their Answers :"
                            android:textStyle="italic|bold"
                            android:textColor="#646363"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            />
                        <TextView
                            android:id="@+id/textview_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#646363"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>