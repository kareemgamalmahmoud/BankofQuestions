<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/backgroundcolor"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/back_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDEA39"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:onClick="back_button_function"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Sign up"
            android:textColor="#646363"
            android:textSize="40sp"
            android:textStyle="bold"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#fff"
            android:shadowRadius="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your registration in this application will make your life better.\nIt develops intelligence and memory a lot."
            android:textColor="#646363"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            />
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="10dp"
            android:layout_margin="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_brain"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name:"
                    android:textSize="15sp"
                    android:textColor="#646363"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/userName_edittext_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#646363"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:textSize="15sp"
                    android:textColor="#646363"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/password_edittext_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#646363"
                    android:layout_marginBottom="10dp"
                    android:inputType="numberPassword"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password:"
                    android:textSize="15sp"
                    android:textColor="#646363"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/confirmPassword_edittext_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#646363"
                    android:inputType="numberPassword"
                    />
                <Button
                    android:id="@+id/creatyouracount_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creat It Now"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/backgroundcolor"
                    android:textColor="#FFF"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:onClick="creatAcountFunction"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>