<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/backgroundcolor"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/back_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDEA39"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:text="Hi,name"
            android:paddingRight="25dp"
            android:textColor="#646363"
            android:textAllCaps="false"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#fff"
            android:shadowRadius="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tital_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Quiz Activity"
            android:textColor="#646363"
            android:textSize="40sp"
            android:textStyle="bold"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#fff"
            android:shadowRadius="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can see many questions in many fields such as history, geography, science, math, sprots, and more...\n\nNote that, you must answer all questions ."
            android:textColor="#646363"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            />
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="10dp"
            android:layout_margin="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_quiz"
                            android:layout_centerInParent="true"
                            />
                        <RadioGroup
                            android:id="@+id/radioGroup_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/textview_rg_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="first question ?"
                                android:textColor="#646363"
                                android:textSize="18sp"
                                />
                            <RadioButton
                                android:id="@+id/choose_1_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_1_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_1_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 choose"
                                />
                        </RadioGroup>
                        <RadioGroup
                            android:id="@+id/radioGroup_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/textview_rg_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="first question ?"
                                android:textColor="#646363"
                                android:textSize="18sp"
                                />
                            <RadioButton
                                android:id="@+id/choose_2_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_2_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_2_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 choose"
                                />
                        </RadioGroup>
                        <RadioGroup
                            android:id="@+id/radioGroup_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/textview_rg_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="first question ?"
                                android:textColor="#646363"
                                android:textSize="18sp"
                                />
                            <RadioButton
                                android:id="@+id/choose_3_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_3_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_3_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 choose"
                                />
                        </RadioGroup>
                        <RadioGroup
                            android:id="@+id/radioGroup_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/textview_rg_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="first question ?"
                                android:textColor="#646363"
                                android:textSize="18sp"
                                />
                            <RadioButton
                                android:id="@+id/choose_4_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_4_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_4_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 choose"
                                />
                        </RadioGroup>
                        <RadioGroup
                            android:id="@+id/radioGroup_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            >
                            <TextView
                                android:id="@+id/textview_rg_5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="first question ?"
                                android:textColor="#646363"
                                android:textSize="18sp"
                                />
                            <RadioButton
                                android:id="@+id/choose_5_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_5_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 choose"
                                />
                            <RadioButton
                                android:id="@+id/choose_5_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 choose"
                                />
                        </RadioGroup>
                        <Button
                            android:id="@+id/submet_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Submet"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:background="@drawable/backgroundcolor"
                            android:textColor="#FFF"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_centerInParent="true"
                            />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>